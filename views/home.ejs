<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blogging App</title>
</head>
<body>
    <%- include('./partials/navbar') %>
   <div class="container mt-3 d-flex gap-4 flex-wrap">
    <% blogs.forEach(blog => { %>
        <div class="card" style="width: 19rem;">
            <img src= "<%- blog.coverImageURL %>" class="card-img" alt="..." style="height: 200px; width: 100%; object-fit:cover; ">
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%=blog._id %>" class="btn btn-primary">View</a>
            </div>
          </div>
        <% }) %>
   </div>
   
    <%- include('./partials/scripts') %>
</body>
</html>